{% extends "layout.njk" %}
{% from "./../format.njk" import format %}
{% from "../popover/component.njk" import popover %}
{% from "./component.njk" import table %}
{% import "./../utils.njk" as utils %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['fonts','helpers','components/image', 'components/popover', 'components/menu'] %}

{% block content %}

<h1>table</h1>
{% set headers = [
        { label: "Header Column" },
        { label: "Header Column" },
        { label: "Header Column" },
        { label: "Header Column" },
        { label: "Header Column" }
    ]
%}

{% set row = ['Lorem', 'Lorem ipsum dolor sit amet ipsum', 'Lorem ipsum dolor sit amet ipsum dolor sit amet ipsum dolor sit amet', 'Lorem ipsum', 'Lorem ipsum dolor sit amet'] %}
{% set image_row = ['<span class=" fd-image--s fd-image--circle" aria-label="Image label" style="background-image: url(http://api.adorable.io/avatars/50/rodney.artichoke@hybris.com.png);"></span>', '<a href="#" class="fd-has-font-weight-semi">user.name@email.com</a>', 'First Name', 'Last Name', '01/26/17'] %}
{% set checkbox_row = ['<input type="checkbox">', '<a class="fd-has-font-weight-semi">user.name@email.com</a>', 'First Name', 'Last Name', '01/26/17'] %}
{% set checkbox_row_selected = ['<input type="checkbox" checked>', '<a class="fd-has-font-weight-semi">user.name@email.com</a>', 'First Name', 'Last Name', '01/26/17'] %}

<!-- output the component example and the code snippet -->
<h3>Default Table</h3>
{% set example %}
{{  table({
        rows: [row, row, row],
        headers: [
            {
                label: "Header Column"
            },
            {
                label: "Header Column"
            },
            {
                label: "Header Column"
            },
            {
                label: "Header Column"
            },
            {
                label: "Header Column"
            }
        ]
    })
}}
{% endset %}
{{ format(example) }}

<br><br><br>

<h3>Column with Contextual Menu</h3>

<div class="fd-popover">
    <div class="fd-popover__control">
        <span class="fd-popover__control fd-image--m fd-image--circle" aria-label="Image label" aria-controls="jhqD0558" aria-expanded="false" aria-haspopup="true" style="background-image: url('https://placeimg.com/400/400/nature');"></span>
    </div>
    <div class="fd-popover__body" aria-hidden="true" id="jhqD0558">
        <nav class="fd-menu" id="">
            <ul class="fd-menu__list">
                <li><a href="#" class="fd-menu__item">Option 1</a></li>
                <li><a href="#" class="fd-menu__item">Option 2</a></li>
                <li><a href="#" class="fd-menu__item">Option 3</a></li>
                <li><a href="#" class="fd-menu__item">Option 4</a></li>
            </ul>
        </nav>
    </div>
</div>

{% set example %}
{{  table({
        rows: [row, row, row],
        headers: [
            {
                label: "Header Column",
                sortable: true,
                id: "test",
                menu: [
                    { "label": "Ascending" },
                    { "label": "Decensing" },
                    { "label": "Fix Column" }
                ],
                aria: {
                    controls: "test",
                    haspopup: true,
                    exapnded: false
                }
            },
            {
                label: "Header Column",
                sortable: true
            },
            {
                label: "Header Column",
                sortable: true
            },
            {
                label: "Header Column"
            },
            {
                label: "Header Column"
            }
        ],
        contextual_headers: true

    })
}}
{% endset %}
{{ format(example) }}

