{% macro calendar(properties={}, modifier={}, state={}, aria={}) -%}
  {%- set month = data.months[properties.month] %}
  {%- set _grid_id = utils.id() %}
  {%- set _months_id = utils.id() %}
  {%- set _years_id = utils.id() %}
<div class="fd-calendar">
  {{ calendar_dates(_grid_id, properties) | indent(2) }}
  {{ calendar_months(_months_id, properties) }}
  {{ calendar_years(_years_id, properties) }}
</div>
{%- endmacro %}


{% macro calendar_dates(id, properties={}, modifier={}, state={}, aria={}) -%}
  {%- set month = data.months[properties.month] %}
  {%- set monthTotalDays = month.days %}
  {%- set daysOffset = properties.daysOffset %}
  {%- set totalCells = 7 * 5 %}
  {%- if monthTotalDays + daysOffset > totalCells %}
    {%- set totalCells = 7 * 6 %}
  {%- endif %}
  {%- set _predate = 31 %}
  {%- set _enddate = 0 %}
<div class="fd-calendar__dates" id="{{id}}">
  <table class="fd-calendar__table">
    {{ calendar_header_group() }}
    <tbody class="fd-calendar__group">
      <tr class="fd-calendar__row">
      {%- for cell in range(0,totalCells) %}
      {%- if (loop.index0) % 7 == 0 and not loop.first%}
      </tr>
      <tr class="fd-calendar__row">
      {%-endif %}
  {%- set date = loop.index - daysOffset %}
  {%- set _is_other_month = date < 1 or date > monthTotalDays %}
  {%- if _is_other_month %}
    {%- if date < 1 %}
      {%- set date = _predate + date %}
    {%- else %}
      {%- set _enddate = _enddate + 1 %}
      {%- set date = _enddate %}
    {%- endif %}
  {%- endif %}
  {%- set _is_today = date === properties.today and _is_other_month == false %}
  {%- set _is_blocked = (date > properties.block[0] and date < properties.block[1]) and not _is_other_month %}
  {%- set _is_selected = date === properties.selected and not _is_other_month %}
  {%- if properties.selectedRange and not _is_other_month %}
    {%- set _is_selected = date === properties.selectedRange[0] or date === properties.selectedRange[1] %}
    {%- set _is_selected_range = date > properties.selectedRange[0] and date < properties.selectedRange[1] %}
  {%- endif %}
        {{ calendar_item(date,modifier={ 'item': ['other-month' if _is_other_month else '', 'current' if _is_today else '' ] },state={ blocked: _is_blocked, selected: _is_selected, 'selected-range': _is_selected_range }) }}
      {%- endfor %}
      </tr>
    </tbody>
  </table>
</div>
{%- endmacro %}

{% macro calendar_months(id, properties={}, modifier={}, state={}, aria={}) -%}
  {%- set month = data.months[properties.month] %}
  <div class="fd-calendar__months{{ state | state}}"{{ aria | aria }} id="{{id}}">
    <ul class="fd-calendar__list">
    {%- for month in data.months %}
{%- set _is_current = properties.month === loop.index0 %}
    {{ calendar_item(month.name | truncate(3, true, "."),modifier={ 'item': ['current' if _is_current else '' ] },state={ blocked: _is_blocked, selected: _is_selected }, el="li") }}
    {%- endfor %}
  </ul>
  </div>
{%- endmacro %}
{% macro calendar_years(id, properties={}, modifier={}, state={}, aria={}) -%}
  <div class="fd-calendar__years{{ state | state}}"{{ aria | aria }} id="{{id}}">
    <ul class="fd-calendar__list">
      {%- for i in range(0,12) %}
      {%- set year = properties.year + loop.index0 %}
      {%- set _is_current = properties.year === year %}
          {{ calendar_item(properties.year + loop.index0,modifier={ 'item': ['current' if _is_current else '' ] },state={ blocked: _is_blocked, selected: _is_selected }, el="li") }}
      {%- endfor %}
    </ul>
  </div>
{%- endmacro %}

{% macro calendar_header(properties={}, modifier={}, state={}, aria={}) -%}
  <header class="fd-calendar__header{{ state | state}}"{{ aria | aria }}>


