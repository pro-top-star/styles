{% extends "layout.njk" %}
{% from "./component.njk" import product_switcher %}
{% from "./../format.njk" import format %}

{% set css_deps = ['fonts','helpers', 'components/popover', 'components/button', 'icons'] %}

{% block content %}
<div style="background-color: #f3f4f5; margin:-20px; padding:50px;">
    <h1>Product Switcher</h1>

    {% set basic_product_switcher %}
        {{ product_switcher(properties={ "items": data.properties.items }) }}
    {% endset %}

    {{ format(basic_product_switcher) }}
</div>
{% endblock %}
