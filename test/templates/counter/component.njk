{% import "./../utils.njk" as utils %}
{% set defaults = {
    count: 1,
    modifier: ["notification"],
    aria: {
      label: "Unread count"
    }
  }
%}
<!--
counter:
  count: 0
  modifier={ }
-->
{% macro counter(count=defaults.count, modifier=defaults.modifier, state={}, aria=defaults.aria, classes=[]) -%}
    {%- set limit = 999 %}
    {%- if count > limit %}
        {%- set _count = limit + "+" %}
    {%- else %}
        {%- set _count = count %}
    {%- endif %}
    {%- if count !== 0 %}
<span class="fd-counter{{ modifier | modifier('counter') }}{{ classes | classes }}"{{aria | aria}}>{{ _count }}</span>
    {%- endif %}
{%- endmacro %}
