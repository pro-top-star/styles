{% import "./../utils.njk" as utils %}

<!--
counter:
  count: 0
  modifier={ }
-->
{% macro counter(count=1, modifier=[], state={}, aria={}, classes="") -%}
    {%- set limit = 999 %}
    {%- if count > limit %}
        {% set _count = limit + "+" %}
    {%- else %}
        {% set _count = count %}
    {%- endif %}
    {%- if count !== 0 %}
<span class="fd-counter{{ modifier | modifier('counter') }}"{{aria | aria}}>{{ _count }}</span>
    {%- endif %}
{%- endmacro %}
