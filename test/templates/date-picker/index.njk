{% extends "layout.njk" %}
{% import "./../utils.njk" as utils %}
{% from "./../format.njk" import format %}
{% from "./component.njk" import popover %}
{% from "./../menu/component.njk" import menu %}
{% from "./../calendar/component.njk" import calendar %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['fonts','components/button','icons','components/image', 'components/menu', 'components/calendar', 'components/popover'] %}

{% block content %}

<h2>datepicker</h2>

{% set example %}
  {%- set _id = utils.id() %}

  {%- macro datepicker_control(properties={}) -%}
    <span class="fd-popover__control{{ modifier.control | modifier('popover__control') }}  fd-image--m fd-image--circle" aria-label="Image label" aria-controls="{{ properties.id }}" aria-expanded="false" aria-haspopup="true"{{ " disabled" if state.disabled }}{{ aria | aria }} style="background-image: url('https://placeimg.com/400/400/nature');"></span>
  {%- endmacro %}

  {{  popover(properties={
      id: _id,
      control: datepicker_control(properties={id: _id}),
      body: calendar({
        "month": 0,
        "year": 2018,
        "today": 3,
        "years": {
          "selected": 3,
          "show": true
        }
      })
    },modifier={ block: 'date-picker' })
  }}
{% endset %}
{{ format(example) }}

{% endblock %}




