<!--
    ///// DATE PICKER FILTER

    .filter, .filter--datepicker, .filter--rangedatepicker
    :   filter wrapper container

    .filter__control
    :   trigger button
        .prev--, .next--
        :   small cap buttons
        &[aria-haspopup]
        :   false || true if has dropdown

    .filter__options
    :   dropdown wrapper

    .filter__panel
    :   layout container for dropdown contents
        &.calendar--
        :   calendar panel
        &.buttons--
        :   buttons panel

    /////
-->

{% macro date_picker(properties={}, modifier={}, state={}, aria={}) -%}
{# <div class="fd-date-picker{{ modifier.block | modifier('date-picker') }}{{ state | state }}"{{ aria | aria }}>
    <div class="fd-date-picker__content{{ modifier.content | modifier('date-picker__content') }}">
        <h1 class="fd-date-picker__title">{{ properties.title }}</h1>
        {%- if properties.description %}
            {{ properties.description }}
        {%- endif %}
    </div>
</div> #}



<div class="date-picker" id="datepicker-single">
    <button class="filter__control prev--" aria-label="Previous Period"></button>

    <button class="filter__control input-group date" aria-controls="datepicker-single-filter" aria-haspopup="true">01/01/15</button>

    <div class="filter__options" id="datepicker-single-filter" hidden>
        <fieldset class="form__set filter__panel calendar--">
            <div class="form__item" id="calendar">

            </div>
            <div class="form__item input__">

<label for="soInputInner_7">Date</label>
<input id="soInputInner_7" class="is-valid" type="text" required="" value="01/01/15" name="startDate"> <span name="hintDom" role="presentation" class="hint__"></span>

            </div>
        </fieldset>
        <fieldset class="form__set filter__panel buttons--">
            <div class="form__item">

            <ul class="navlist--vertical">
                <li class="item__"><button class="button--calendar" aria-selected="true">Yesterday</button></li>
                <li class="item__"><button class="button--calendar" aria-selected="false">Last Week</button></li>
                <li class="item__"><button class="button--calendar" aria-selected="false">Last Month</button></li>
                <li class="item__"><button class="button--calendar" aria-selected="false">Last Year</button></li>
            </ul>


            </div>
        </fieldset>
    </div>

    <button class="filter__control next--" aria-label="Next Period"></button>
</div>

{%- endmacro %}
