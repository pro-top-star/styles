<!--
popover:
    properties={},
    modifier={ block: [] },
    state={},
    aria={}
-->

{%- macro popover(properties={}, modifier={}, state={}, aria={ hidden: true }) %}
    <div class="fd-popover{{ modifier.block | modifier('popover') }}">
        {{ popover_control({ control: properties.control }) }}

        {{ popover_body({ body: properties.body, id: properties.id }) }}
    </div>
{%- endmacro %}

{%- macro popover_control(properties={}, modifier={}, state={}) %}
    <div class="fd-popover__control"{{ aria | aria }}>{{properties.control}}</div>
{%- endmacro %}

{%- macro popover_body(properties={}, modifier={}, state={}, aria={ hidden: true }) %}
    <div class="fd-popover__body"{{ aria | aria }} id="{{ properties.id }}">{{properties.body}}</div>
{%- endmacro %}