{% extends "./layouts/app.njk" %}
{% from "./../alert/component.njk" import alert %}
{# ui-level settings #}
{% set fix_ui_header = true %}
{% set hide_ui_footer = true %}
{% block ui_header -%}
<span style="color: var(--fd-color-text-5)">.fd-shell__header.fd-shell__header--fixed</span>
{%- endblock %}

{% block ui_footer -%}
.fd-shell__footer
{%- endblock %}
{% set show_ui_overlay = true %}
{% set overlay_modifier = "fd-overlay--alert" %}
{% block ui_overlay %}
{# ui_overlay #}

{{  alert(
        properties={
            text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit',
            dismissible: true
        },
        modifier={
            block: ['warning']
        }
    )
}}

{% endblock %}

{# app-level settings #}
{% block app_main %}
.fd-shell__app
{% endblock %}
