{% extends "./layouts/module.njk" %}
{% import "../forms.njk" as forms %}
{% import "../layout/component.njk" as layout %}
{% from "./../toggle/component.njk" import toggle %}
{% from "./../button/component.njk" import button %}
{% from "./../combobox-input/component.njk" import combobox_input %}
{% from "./../date-picker/component.njk" import date_picker %}
{% from "./../input-group/component.njk" import input_group %}
{% from "./../localization-editor/component.njk" import localization_editor %}
{% from "./../multi-input/component.njk" import multi_input %}
{% from "./../search-input/component.njk" import search_input %}
{% from "./../time-picker/component.njk" import time_picker %}
{% from "./../button-group/component.njk" import button_group %}
{% import "./../utils.njk" as utils %}
{#
{%- set _id = utils.id() %}
#}

{% set hide_sidebar = true %}
{% block page_content %}

{% call layout.section() -%}
{% call layout.panel() -%}
{% call layout.panel_body() -%}
{% call layout.container() -%}

{% call layout.col(span=6) -%}

<h3>input[type=text]</h3>
<div class="fd-form__item fd-has-display-flex">
    {{ forms.text() }}
    {{ button({ label: "Dolor"}) }}
</div>

<h3>select</h3>
<div class="fd-form__item fd-has-display-flex">
    {{ forms.select() }} {{ button({ label: "Dolor"}) }}
</div>

<h4>select[multiple]</h4>
<div class="fd-form__item fd-has-display-flex">
    {{ forms.select(state={ multiple: true }) }} {{ button({ label: "Dolor"}) }}
</div>

<h3>input[type=radio]</h3>
<div class="fd-form__item">
        {{ forms.radio() }}
        {{ forms.radio() }}
        {{ forms.radio() }}
{{ button({ label: "Dolor"}) }}

</div>
<h3>input[type=checkbox]</h3>
<div class="fd-form__item">
        {{ forms.checkbox() }}
          {{ forms.checkbox() }}
            {{ forms.checkbox() }}

            {{ button({ label: "Dolor"}) }}
</div>

<h3>.fd-toggle input[type=checkbox]</h3>
<div class="fd-form__item">
      {{ toggle() }} {{ button({ label: "Dolor"}) }}
</div>

<h3>textarea</h3>
<div class="fd-form__item">
    {{ forms.textarea() }} {{ button({ label: "Dolor"}) }}
</div>





