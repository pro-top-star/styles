<h3>.fd-button-group</h3>
<div class="fd-form__item">
  {% for size in ["","compact"] %}
    {%- set modifier = { block: [size] } %}
    {%- if size == "default" %}
      {%- set modifier = { block: [] } %}
    {%- endif %}
  {% call button_group() -%}
    {{-  button(
      { icon: 'survey' },
        modifier={ block: [size] },
        aria={ label: 'Survey' })
      }}
    {{-  button(
        { icon: 'pie-chart' },
          modifier={ block: [size] },
          aria={ label: 'Chart', selected: true })
        }}
    {{-  button(
          { icon: 'pool' },
            modifier={ block: [size] },
