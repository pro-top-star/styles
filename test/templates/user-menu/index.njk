{% extends "layout.njk" %}
{% from "./component.njk" import user_menu %}
{% from "./../format.njk" import format %}

{% set css_deps = ['fonts','helpers', 'components/popover', 'components/menu', 'components/identifier', 'icons'] %}

{% block content %}
<div style="background-color: #f3f4f5; margin:-20px; padding:50px 100px;">
    <h1>User Menu</h1>
    {% set basic_user_menu %}
        {{ user_menu(properties={ "initials": data.properties.initials, "name": data.properties.name, "items": data.properties.items }) }}
    {% endset %}

    {{ format(basic_user_menu) }}
</div>
{% endblock %}
