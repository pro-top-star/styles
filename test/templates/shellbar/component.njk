{%- macro shell_logo(logo=brand.logo, name=brand.name) %}
  <div class="fd-shellbar__logo{{ ' fd-shellbar__logo--image-replaced' if not logo.src and not logo.svg  }}" aria-label="{{ name }}">
    {%- if logo.src %}
    {%- set comma = joiner() %}
      <img src="{{ logo.src }}"{% if logo.srcset %} srcset="{% for item in logo.srcset %}{{ comma() -}} {{ item }} {{ loop.index }}x
      {%- endfor %}"{% endif %} alt="">
    {%- endif %}
    {%- if logo.svg %}
      {{ logo.svg }}
    {%- endif %}
  </div>
{% endmacro -%}

{% macro titlemenu(brand=brand, product=product, modifier={}, state={}, aria={}) -%}
  {%- set _id = utils.id() %}
  <div class="fd-shellbar__titlemenu{{ state | state }}"{{ aria | aria }}>
    {{  popover(properties={
            id: _id,
            control: titlemenu_control(brand=brand, product=product, aria={ "controls": _id, "haspopup": true, "expanded": false}),
            body: menu(properties={
                "items": product.items
            })
        }, modifier={ block: ['right'] })
    }}
  </div>
{%- endmacro %}


{%- macro titlemenu_control(brand=brand, product=product, aria={}) -%}
  <div class="fd-shellbar__titlemenucontrol"{{ aria | aria }} role="button">
    <div class="fd-shellbar__titlemenulogo">
      {{ shell_logo(logo=brand.logo, name=brand.name) }}
    </div>
    <div class="fd-shellbar__titlemenutitle">
      {{ product.title }}
    </div>
  </div>
{%- endmacro -%}


{% macro shellbar(brand=brand,product=product,copilot=true,actions=actions,user=true,switcher=true, search=search_input_props, properties={}, modifier={}, state={}, aria={}) -%}
  {%- set _id = utils.id() %}
  <div class="fd-shellbar">
    <div class="fd-shellbar__group fd-shellbar__group--start">
        {% if product.items %}
          {{ titlemenu(brand,product) }}
        {% else %}
          {{ shell_logo(logo=brand.logo, name=brand.name) }}
          <div class="fd-shellbar__title">
            {{ product.title }}
          </div>
        {% endif %}
        {% if product.subtitle %}
          <div class="fd-shellbar__subtitle">
            {{ product.subtitle }}
          </div>
        {% endif %}
    </div>
    {% if copilot === true %}
    <div class="fd-shellbar__group fd-shellbar__group--middle">
      <img src="/static/copilot.png" alt="CoPilot" height="30" width="30" />
    </div>
    {% endif %}
    {% if actions or user or switcher or search %}
      <div class="fd-shellbar__group fd-shellbar__group--end">
      {{ shell_actions(actions=actions, user=user, switcher=switcher, search=search,  properties=properties) }}
    </div>
    {% endif %}
  </div>
{%- endmacro %}

{% macro shell_actions(actions=actions, user=true, switcher=true, search=false, properties={}, modifier={}, state={}, aria={}) -%}
  {% set collapsed_items = actions | filter_array("collapse",true) %}
    <div class="fd-shellbar__actions">
      {%- if actions %}
        {%- if search %}
          <div class="fd-shellbar__action fd-shellbar__action--hide">
            {{ search_input(properties=search) }}
          </div>
        {% endif %}
        {%- for item in actions %}
            <div class="fd-shellbar__action fd-shellbar__action--hide">
                {{item.action}}
            </div>
        {%- endfor %}
        <div class="fd-shellbar__action fd-shellbar__action--collapse">
          {{ shell_actions_collapse(actions=collapsed_items) }}
        </div>
        {%- endif %}
        {%- if user %}
            <div class="fd-shellbar__action fd-shellbar__action--show">
              {{ user_menu(thumbnail="") }}
            </div>
        {%- endif %}
        {%- if switcher %}
            <div class="fd-shellbar__action fd-shellbar__action--hide">
              {{ product_switcher() }}
            </div>
        {%- endif %}
    </div>
{%- endmacro %}

{% macro shell_actions_collapse(actions=[], user=true, switcher=true, properties={}, modifier={}, state={}, aria={}) -%}
  {%- set _id = utils.id() %}
  {%- set totalNotifications = 0 %}
  {%- for item in actions %}
    {%- set totalNotifications = totalNotifications + (item.notifications or 0) %}
  {%- endfor %}
  <div class="fd-shellbar-collapse">
      {{  popover(properties={
              id: _id,
              control: shellbar_collapse_control(properties={"id": _id, "notifications": totalNotifications}),
              body: menu(properties={
                  "items": actions
              })
          }, modifier={ block: ['right'] })
      }}
  </div>
{%- endmacro %}

{%- macro shellbar_collapse_control(properties={}, modifier={}, state={}) -%}
  <div class="fd-shellbar-collapse--control" aria-controls="{{properties.id}}" aria-expanded="false" aria-haspopup="true" role="button">
      {{ button({ label: counter(count=properties.notifications,modifier="notification"), icon: 'overflow' }, modifier={ block: ['shellheader fd-button--m'] }, aria={ "controls": _id, "haspopup": true, "expanded": false}) }}
  </div>
{%- endmacro -%}
