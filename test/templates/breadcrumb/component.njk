<!--
breadcrumb:
    properties={},
    modifier={ block: [] },
    state={},
    aria={}
-->
{% macro breadcrumb(properties={}, modifier={}, state={}, aria={}) -%}
<ul class="fd-breadcrumb{{ modifier.block | modifier('breadcrumb') }}{{ state | state }}"{{ aria | aria }}>
    {%- for item in properties.items %}
    <li >
        <a href="{{ item.link }}" class="fd-breadcrumb__item{{ modifier.content | modifier('breadcrumb__content') }}">{{ item.label }}</a>
    </li>
    {% endfor %}
</ul>
{%- endmacro %}
