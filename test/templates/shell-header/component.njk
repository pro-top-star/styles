{% import "./../utils.njk" as utils %}
{% from "./../shell-header-brand/component.njk" import shell_header_brand %}

<!--
shell_header:
    properties={
        "brand": {
            "name": "",
            "logo": ""
        },
        "title": "",
        "subtitle": "",
        "copilot": true,
        "actions": []
    },
    modifier={ block: [] },
    state={},
    aria={}
-->

{% macro shell_header(properties={}, modifier={}, state={}, aria={}) -%}
{%- set _id = utils.id() %}
<div class="fd-shell-header">
    <div class="fd-shell-header__group fd-shell-header__group--start">
        <div class="fd-shell-header__logo">
            {{  shell_header_brand() }}
        </div>
        {% if properties.title %}<div class="fd-shell-header__title">{{ properties.title }}</div>{% endif %}
        {% if properties.subtitle %}<div class="fd-shell-header__subtitle">{{ properties.subtitle }}</div>{% endif %}
    </div>

    {% if properties.copilot === true %}
    <div class="fd-shell-header__group fd-shell-header__group--middle">
        <span class="fd-shell-header__copilot">
            <img src="/static/copilot.png" />
        </span>
    </div>
    {% endif %}

    {% if properties.actions %}
    <div class="fd-shell-header__group fd-shell-header__group--end">
        <div class="fd-shell-header__actions">
            {% for item in properties.actions %}
                <div class="fd-shell-header__action fd-shell-header__action--{{item.name}}">
                    {{item.component}}
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}
</div>
{%- endmacro %}
