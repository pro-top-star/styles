{% extends "layout.njk" %}
{% import "./../utils.njk" as utils %}
{% from "./../format.njk" import format %}
{% from "../button/component.njk" import button %}
{% from "../icon/component.njk" import icon %}
{% from "../input-group/component.njk" import input_group %}
{% from "../popover/component.njk" import popover %}
{% from "./../menu/component.njk" import menu %}
{% from "./component.njk" import multi_tab_editor %}

<!-- include add'tl css from src/styles/, e.g., ['helpers','components/button'] -->
{% set css_deps = ['fonts','helpers','components/button','icons', 'components/input-group', 'components/popover', 'components/image', 'components/menu'] %}

{% block content %}

    <h1>multi-tab-editor</h1>

    <!-- output the component example and the code snippet -->
    {% set example %}

    {%- set _id = utils.id() %}

    {%- macro sample_control(properties={}) -%}
      <span class="fd-popover__control{{ modifier.control | modifier('popover__control') }}  fd-image--m fd-image--circle" aria-label="Image label" aria-controls="{{ properties.id }}" aria-expanded="false" aria-haspopup="true"{{ " disabled" if state.disabled }}{{ aria | aria }} style="background-image: url('https://placeimg.com/400/400/nature');"></span>
    {%- endmacro %}

    {{  popover(properties={
        id: _id,
        control: sample_control(properties={id: _id}),
        body: menu(properties={
          items: [
              { "label": "Option 1" },
              { "label": "Option 2" },
              { "label": "Option 3" },
              { "label": "Option 4" }
            ]
          })
      })
    }}

    <br><br>

    {{ input_group(
        properties={
            after: "km/h",
            input: {
                properties: {
                    placeholder: "Field placeholder text"
                }
            }
        },
        modifier={
            block: ["inline", "after"],
            after: "after"
        })
    }}

    <br><br><br>

    {{  multi_tab_editor(
            properties={
                title: "Sed bibendum sapien",
                description: "Morbi sodales gravida pulvinar. Duis malesuada odio volutpat elementum vulputate massa magna scelerisque ante et accumsan."
            },
            modifier={
                block: []
            },
            state={},
            aria={}
        )
    }}
    {% endset %}
    {{ format(example) }}


{% endblock %}
